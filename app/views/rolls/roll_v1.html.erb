<hr>

<% if @point == "2" || @point == "3" || @point == "12" %>
  <%= "YOU LOSE!" %>
    <form action="/dice/" method="get">
    <input type="submit" value="Play again.">
  </form>
<% else %>
  <p>Your point is now <%= @point %>.</p>
  <p>Your roll is now <%= @roll %>.</p>
  <p>Now try to get <%= @point %> again before you roll a 7.</p>

  <form action="/dice/roll" method="get">
    <label for="point">POINT</label>
    <input type="text" name="point" value="<%= @point %>">

    <label for="roll">ROLL</label>
    <input type="text" name="roll" value="<%= @dice_roll %>">

    <input type="submit" value="Roll">
  </form>

<% end %>
