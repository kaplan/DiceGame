<h1>Dice Game</h1>
<hr>

<% if @dice_roll == nil %>

  <% if @point == 2 || @point == 3 || @point == 12 %>
    <div>
    <img src="/assets/<%= @die1 %>.png"><img src="/assets/<%= @die2 %>.png">
    </div>
    <h3><%= "#{@die1} and #{@die2}" %></h3>
    <h2>YOU LOSE.</h2>
    <form action="/dice" method="post">
      <input type="submit" value="Play again.">
    </form>

  <% elsif @point == 7 || @point == 11 %>
    <div>
    <img src="/assets/<%= @die1 %>.png"><img src="/assets/<%= @die2 %>.png">
    </div>
    <h3><%= "#{@die1} and #{@die2}" %></h3>
    <h2>YOU WIN!</h2>
    <form action="/dice" method="post">
      <input type="submit" value="Play again.">
    </form>

  <% else %>
    <div>
    <img src="/assets/<%= @die1 %>.png"><img src="/assets/<%= @die2 %>.png">
    </div>
    <h3><%= "#{@die1} and #{@die2}" %></h3>
    <h2>Your point is now <%= @point %>.</h2>
    <p>Now try to get <%= @point %> again before you roll a 7.</p>

    <form action="/dice/roll?point=<%= @point %>" method="post">
      <input type="submit" value="Roll the dice">
    </form>
  <% end %>

<% else %>
  <!-- <h2>YO!!</h2> -->
  <p><strong><%# @dice_roll.class %></strong></p>
  <p><%# @point.to_i.class %></p>

  <% if @dice_roll == @point.to_i %>
    <div>
    <img src="/assets/<%= @die1_roll %>.png"><img src="/assets/<%= @die2_roll %>.png">
    </div>
    <h3><%= "#{@die1_roll} and #{@die2_roll}" %></h3>
    <h2>YOU WIN!</h2>
    <form action="/dice" method="post">
      <input type="submit" value="Play again.">
    </form>

  <% elsif @dice_roll == 7 %>
    <div>
    <img src="/assets/<%= @die1_roll %>.png"><img src="/assets/<%= @die2_roll %>.png">
    </div>
    <h3><%= "#{@die1_roll} and #{@die2_roll}" %></h3>
    <h2>YOU LOSE.</h2>
    <form action="/dice" method="post">
      <input type="submit" value="Play again.">
    </form>

  <% else %>
    <div>
    <img src="/assets/<%= @die1_roll %>.png"><img src="/assets/<%= @die2_roll %>.png">
    </div>
    <h3><%= "#{@die1_roll} and #{@die2_roll}" %></h3>
    <h3>Your point is <%= @point %>. You can roll again.</h3>
    <form action="/dice/roll?point=<%= @point %>" method="post">
      <input type="submit" value="Roll again.">
    </form>

  <% end %>

<% end %>


